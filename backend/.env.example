# ============================================================
# BotForge Backend - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# --- Application ---
APP_NAME=BotForge
APP_ENV=development
DEBUG=true

# --- Database (PostgreSQL) ---
DB_HOST=db
DB_PORT=5432
DB_USER=botforge
DB_PASSWORD=botforge_secret_dev
DB_NAME=botforge
DATABASE_URL=postgresql+asyncpg://botforge:botforge_secret_dev@db:5432/botforge

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# --- JWT Authentication ---
JWT_SECRET_KEY=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Encryption (AES-256-GCM for API keys) ---
ENCRYPTION_KEY=CHANGE_ME_TO_A_BASE64_ENCODED_32_BYTE_KEY

# --- Binance API ---
BINANCE_BASE_URL=https://api.binance.com

# --- CORS ---
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# --- Market Data Cache ---
OHLCV_CACHE_TTL_SECONDS=86400
